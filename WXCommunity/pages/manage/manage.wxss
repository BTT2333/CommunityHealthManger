/* pages/manage/manage.wxss */
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 300rpx;
}
.slides image{
  width: 100%;
  height: 100%;
}

.bottom{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.notice{
  width: 700rpx;
  height: 250rpx;
  border-radius: 15rpx;
  box-shadow: 0px 5px 5px 5px #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0;
}
.notice-in{
  width: 630rpx;
  height:200rpx;
  display: flex;
  align-items: center;
}
.notice-img{
  width: 150rpx;
  height: 150rpx;
}
.notice-text{
  margin-left: 20rpx;
  width: 470rpx;
}
.notice-text1{
  font-size: 40rpx;
  font-weight: 550;
}
.notice-text2{
  font-size: 30rpx;
  color: rgb(148, 148, 148);
}

/* 便民服务 */
.service{
  margin: 30rpx 25rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.service-title{
  margin-top: 30rpx;
  font-size: 60rpx;
  font-weight: 550;
  position: relative;
  left: -215rpx;
  color: rgba(0, 0, 0, 0.781);
}

.service_item{
  height: 200rpx;
  width: 320rpx;
  border-radius: 15rpx;
  box-shadow: 0px 5px 5px 1px #eee;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center;
  align-items: center; */
  padding: 30rpx 0 0 20rpx;
}
.service_item_text{
  font-size: 45rpx;
  font-weight: 550;
  color: rgba(0, 0, 0, 0.611);
}
.service_item_text-1{
  margin-top: 12rpx;
  width: 230rpx;
  font-size: 30rpx;
  color: rgba(107, 107, 107, 0.632);
}
.bg-line {
  width: 200rpx;
  height: 100rpx;
  position: absolute;
  opacity: 0.5;
  background-size:100rpx 100rpx;
  margin-top: 5rpx;
  z-index: -1;
}
.bg-line-lo{
  width: 110rpx;
  height: 110rpx;
